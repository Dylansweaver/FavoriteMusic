<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dweaver.alohamusic.MainActivity"
    android:background="@drawable/music2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play SONG 1"
        android:id="@+id/btnSong1"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play SONG 2"
        android:id="@+id/btnSong2"
        android:textSize="22sp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/btnSong3"
        android:layout_alignStart="@+id/btnSong3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSong3"
        android:text="Play Song 3"
        android:textSize="22sp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignLeft="@+id/btnSong1"
        android:layout_alignStart="@+id/btnSong1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/btnSong1"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:id="@+id/radioButton"
            android:checked="false"
            android:layout_alignTop="@+id/radioButton2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Favorite"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:layout_alignTop="@+id/radioGroup"
            android:layout_alignLeft="@+id/btnSong2"
            android:layout_alignStart="@+id/btnSong2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Least Favorite"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:layout_below="@+id/btnSong1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSong2"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:id="@+id/radioButton4"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Favorite"
            android:id="@+id/radioButton5"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Least Favorite"
            android:id="@+id/radioButton6"
            android:checked="false" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSong3"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:id="@+id/radioButton7"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Favorite"
            android:id="@+id/radioButton8"
            android:layout_gravity="center_horizontal"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Least Favorite"
            android:id="@+id/radioButton9"
            android:checked="false" />
    </RadioGroup>

</RelativeLayout>
